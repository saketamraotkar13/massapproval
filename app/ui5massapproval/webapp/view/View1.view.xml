<mvc:View 
    controllerName="ui5massapproval.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable" height="100%">
	<Page id="page" title="Orders">
		<!-- Smart Filter Bar -->
		<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Orders" persistencyKey="SmartFilterBarOrders" useToolbar="true" enableBasicSearch="true" />
		<!-- Smart Table -->
		<smartTable:SmartTable id="smartTable" tableType="Table" entitySet="Orders" smartFilterId="smartFilterBar" editTogglable="true" useVariantManagement="true" useTablePersonalisation="true" header="Orders" enableAutoBinding="true" showRowCount="true" initiallyVisibleFields="orderNumber,reasonCode,approveLoad">
			<!-- Custom toolbar with Approve button -->
			<smartTable:customToolbar>
				<Toolbar id="idtb">
					<Title text="Orders" level="H2" id="idttl" />
					<ToolbarSpacer id="idTBS"/>
					<Button text="Approve" type="Emphasized" press=".onApproveSelected" id="idBtnApprv" />
				</Toolbar>
			</smartTable:customToolbar>
		</smartTable:SmartTable>
	</Page>
</mvc:View>
